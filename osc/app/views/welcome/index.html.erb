<!-- Row of columns -->
      <div class="row">
        
        <div class="span12">
        <h1>Latest News</h1>

        	<% @articles.each do |article| %>
					    <h3><%= article.title %></h3>
					    <p><%= article.body %></p>
					    <%= link_to raw('Read More &raquo;'), article, :class => 'btn btn-large btn-primary' %>
					<% end %>

        </div>
      </div>